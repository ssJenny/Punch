.container {
  min-height: 100vh;
  position: relative;
  background-color: #E0E5F7;
  overflow: hidden;
}
.header {
  height: 600rpx;
  width: 100%;
  top: 0;
  position: absolute;
  background: linear-gradient(#ADCFFB, #FC9EC9);
}
.avator {
  position: absolute;
  left: 50%;
  top: 100rpx;
  width: 200rpx;
  height: 200rpx;
  transform: translateX(-50%);
}
.avator image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.card-list {
  width: 75%;
  background-color: rgba(255, 255, 255, 0.8);
  position: absolute;
  top: 400rpx;
  left: 50%;
  min-height: 600rpx;
  transform: translateX(-50%);
}
.card-item {
  border-left: 4px solid #A5DDF0;
  padding: 30rpx 20rpx;
  position: relative;
}
.card-item .icon-complete {
  position: absolute;
  right: 20rpx;
  font-size: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #bbb;
}
.card-item .icon-complete.checked {
  color: #00C8B0;
}
.card-item:nth-of-type(2n) {
  border-left-color: #FEA0A0;
} 
.card-item:not(:last-child),
.card-item:only-child {
  border-bottom: 1px solid #D8D7D7;
}
.button-add {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 150rpx;
}
.button-add .icon-add {
  font-size: 48rpx;
  color: #bbb;
}